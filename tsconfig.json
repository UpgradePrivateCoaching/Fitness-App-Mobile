{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@app/*": ["app/*"],
      "@helpers/*": ["helpers/*"],
      "@constants/*": ["constants/*"],
      "@navigation/*": ["navigation/*"],
      "@fonts/*": ["assets/fonts/*"],
      "@images/*": ["assets/images/*"],
      "@styles/*": ["assets/styles/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@data/*": ["data/*"],
      "@lib/*": ["lib/*"],
      "@services/*": ["services/*"]
    }
  },

  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
